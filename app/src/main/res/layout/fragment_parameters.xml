        android:layout_height="156dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="236dp"
            android:layout_height="112dp"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="117dp"
            android:layout_height="112dp"
            android:src="@drawable/ludivine_ducamp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="236dp"
            android:layout_height="112dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:text="Créatrice de l'app"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="177dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="Ludivine Ducamp"
                tools:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="236dp"
            android:layout_height="112dp"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image2"
            android:layout_width="117dp"
            android:layout_height="112dp"
            android:src="@drawable/martin_hauw"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="236dp"
            android:layout_height="112dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:text="Graphiste"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="188dp"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:text="Martin Hauw"
                tools:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="365dp"
        android:layout_height="0.1dp"
        android:layout_weight="0.1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_linerlayout"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="366dp"
        android:layout_height="0.1dp"
        android:layout_weight="0.3"
        tools:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="236dp"
            android:layout_height="112dp"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image3"
            android:layout_width="117dp"
            android:layout_height="112dp"
            android:src="@drawable/andrew_backes"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="236dp"
            android:layout_height="112dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:text="Un grand merci"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_weight="1"
                android:text="Andrew Backes, créateur de Pokémon TCG API"
                tools:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="47dp"
            android:layout_height="111dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_selector"
            android:text="Rejoins nous"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="38dp"
            android:layout_height="111dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="111dp"
            android:layout_height="97dp"
            android:src="@drawable/logo_discord"></ImageView>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="47dp"
            android:layout_height="111dp"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>