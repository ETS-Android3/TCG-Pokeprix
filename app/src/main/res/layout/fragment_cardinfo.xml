            android:gravity="center_vertical"
            android:text="@string/xxx"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cardMarketAvg2Text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:text="@string/moyenne_7_jours"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cardMarketAvg2Fill"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:text="@string/xxx"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tcgMarketMarketText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@string/tcgmarket_march"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tcgMarketMarketTextFill"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@string/xxx"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tcgMarketLowText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:text="@string/tcgmarket_bas"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tcgMarketLowFill"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:text="@string/xxx"
