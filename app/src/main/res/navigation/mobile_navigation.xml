<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pokemoncardprice.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_graph"
        android:name="com.example.pokemoncardprice.ui.graph.GraphFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_graph" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.pokemoncardprice.ui.card_info.CardsInfoFragment"
        android:label="@string/title_card_info"
        tools:layout="@layout/fragment_cardinfo" />
    <fragment
        android:id="@+id/cardSearchFragment"
        android:name="com.example.pokemoncardprice.ui.card_search.CardSearchFragment"
        android:label="Recherche une carte"
        tools:layout="@layout/fragment_cardsearch" >
        <action
            android:id="@+id/action_cardSearchFragment_to_cardsFragment"
            app:destination="@id/cardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.example.pokemoncardprice.ui.card.CardsFragment"
        android:label="Liste de cartes"
        tools:layout="@layout/fragment_cards"
        >
        <action
            android:id="@+id/action_cardsFragment_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>
    <fragment
        android:id="@+id/navigation_listfavoris"
        android:name="com.example.pokemoncardprice.ui.favoris.FavorisFragment"
        android:label="Collection"
        tools:layout="@layout/fragment_favoris">
        <action
            android:id="@+id/action_favorisFragment2_to_navigation_dashboard"
            app:destination="@id/navigation_graph" />
    </fragment>
    <fragment
        android:id="@+id/navigation_parameters"
        android:name="com.example.pokemoncardprice.ui.parameters.ParametersFragment"
        android:label="ParamÃ¨tres"
        tools:layout="@layout/fragment_parameters" />
</navigation>